        <StackPanel Orientation="Horizontal" x:Name="fieldMoney" Grid.Column="1" Grid.Row="16" Margin="8,6,8,10">
            <RadioButton Margin="8,0,8,0" GroupName="Response7" Content="Бюджет" Click="RadioButton_Click_Money" />
            <RadioButton Margin="8,0,8,0" GroupName="Response7" Content="Договор об оказании платных образовательных услуг" Click="RadioButton_Click_Money"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" x:Name="fieldEnrollment" Grid.Column="1" Grid.Row="17" Margin="8,6,8,10">
            <RadioButton Margin="8,0,8,0" GroupName="Response8" Content="Да" Click="RadioButton_Click_Enrollment" />
            <RadioButton Margin="8,0,8,0" GroupName="Response8" Content="Нет" Click="RadioButton_Click_Enrollment"/>
        </StackPanel>

        <TextBox x:Name="fieldYearOfAdmission" Grid.Column="1" Grid.Row="18" VerticalContentAlignment="Center" Margin="8,6,8,10" TextChanged="fieldYearOfAdmission_TextChanged">
            <TextBox.Text>
                <Binding Path="YearOfAdmission" NotifyOnValidationError="True">
                    <Binding.ValidationRules>
                        <DataErrorValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="19" Grid.Column="1">
            <Button x:Name="Accept" IsDefault="True" Click="Accept_Click">OK</Button>
            <Button IsCancel="True">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
